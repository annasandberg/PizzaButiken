@model IEnumerable<PizzaButiken.Models.Order>
@using PizzaButiken.Views.Manage

@{
    ViewData["Title"] = "OrderHistory";
    ViewData.AddActivePage(ManageNavPages.OrderHistory);
}

<h2>Order History</h2>

    @foreach (var order in Model)
    {
        <div class="col-md-12">
            <div class="col-md-6">
                <h5><b>@order.OrderDate</b></h5>
                <table class="table">
                    <tr>
                        <th class="col-md-2">Product</th>
                        <th class="col-md-2">Quantity</th>
                        <th class="col-md-2">Price</th>
                    </tr>
                    @foreach (var item in order.Cart.Items)
                {
                        <tr>
                            <td class="col-md-2">@item.Name</td>
                            <td class="col-md-2">(@item.Quantity)</td>
                            <td class="col-md-2">@item.Price SEK</td>
                        </tr>
                    }
                </table>
                <h5 style="text-align:right;"><b>Total: @order.TotalPrice SEK</b></h5>
            </div>
        </div>
    }
        

