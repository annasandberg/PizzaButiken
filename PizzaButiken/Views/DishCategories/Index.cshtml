@model IEnumerable<PizzaButiken.Models.DishCategory>

@{
    ViewData["Title"] = "Categories";
}
<h2>DishCategories</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DishCategoryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.DishCategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

